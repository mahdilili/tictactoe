<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TicTacToeWPF.Views"
        xmlns:TicTacToeLib="clr-namespace:TicTacToeLib;assembly=TicTacToeLib" x:Name="frmOptionsVisuel" x:Class="TicTacToeWPF.Views.frmOptions"
        mc:Ignorable="d"
        Title="Options..." Height="244" Width="571">
    <Grid x:Name="grdMain" d:DataContext="{d:DesignInstance {x:Type TicTacToeLib:Options}}">
        <CheckBox x:Name="chkDéfautO" Content="Choisir  les O pour débuter" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" IsChecked="{Binding JetonDéfautO}"/>

    </Grid>
</Window>
